{
  "name": "cacp-contracts",
  "version": "0.0.1",
  "description": "Digix Contract Access Control",
  "scripts": {
    "dev": "node ./scripts/watch-tests.js",
    "inspect": "node --inspect --debug-brk ./node_modules/truffle/cli.js test",
    "console": "node ./node_modules/truffle/cli.js console --network development",
    "compile": "rm -rf ./build; node ./node_modules/truffle/cli.js compile --network development",
    "test-server": "./node_modules/.bin/testrpc -p 6545",
    "deploy-tests": "node ./node_modules/truffle/cli.js migrate --network development",
    "run-tests": "node ./node_modules/truffle/cli.js test",
    "test": "npm run compile && npm run deploy-tests && npm run run-tests",
    "deploy-morden": "node ./node_modules/truffle/cli.js migrate --reset --network morden"
  },
  "devDependencies": {
    "@digix/contest": "^0.2.0",
    "@digix/sigmate": "^2.0.3",
    "@digix/tempo": "0.0.3",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "chokidar": "^1.6.0",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "multi-hash": "^0.1.1",
    "truffle": "3.0.0-3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DigixGlobal/cacp-contracts.git"
  }
}
